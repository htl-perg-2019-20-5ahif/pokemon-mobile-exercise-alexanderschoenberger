<Window x:Class="PokemonExplorerWPF.Detail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonExplorerWPF"
        mc:Ignorable="d"
        Title="Detail" Height="450" Width="800">
    <Grid>
        <Label Width="90" Content="{Binding Name}"/>
        <Label Width="90" Content="{Binding Weight}"/>
        <Label Width="90" Content="{Binding Abilities}"/>
        <Label Width="90"  Content="{Binding Sprites.Front_default}"/>
        <Label Width="90" Content="{Binding Sprites.Back_default}"/>
        <Button Content="Close" Click="CloseWindow" Margin="704,386,0,0"></Button>
    </Grid>
</Window>
